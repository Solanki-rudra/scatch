<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Products</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 min-h-screen text-white p-8">
  <h1 class="text-3xl font-bold text-center mb-8">Products</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% if (products && products.length> 0) { %>
      <% products.forEach(function(product) { %>
        <div class="rounded-xl shadow-lg overflow-hidden"
          style="background-color: <%= product.bgColor ? product.bgColor : '#1f2937' %>;">
          <!-- Image -->
          <div class="h-48 w-full overflow-hidden flex items-center justify-center"
            style="background-color: <%= product.panelColor ? product.panelColor : '#374151' %>;">
            <img src="data:image/png;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>"
              class="object-contain h-full w-full">
          </div>
          <!-- Details -->
          <div class="p-4" style="color: <%= product.textColor ? product.textColor : '#ffffff' %>;">
            <h2 class="text-xl font-semibold mb-2">
              <%= product.name %>
            </h2>

            <p class="mb-2">
              Price:
              <span class="font-bold">â‚¹<%= product.price %></span>
            </p>

            <% if (product.discount && product.discount> 0) { %>
              <p class="mb-2 text-green-400">Discount: <%= product.discount %>%</p>
              <% } else { %>
                <p class="mb-2 text-gray-400">No Discount</p>
                <% } %>

                  <!-- Add to Cart Button -->
                  <div class="flex justify-end mt-4">
                    <a
                      class="bg-green-500 hover:bg-green-600 text-white rounded-full w-10 h-10 flex items-center justify-center shadow-md transition"
                      href="/add-to-cart/<%= product._id %>">
                      +
                    </a>
                  </div>
          </div>

        </div>
        <% }) %>
          <% } else { %>
            <p class="text-center text-gray-400 col-span-3">No products available</p>
            <% } %>
  </div>
</body>

</html>