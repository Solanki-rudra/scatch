<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Create Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 flex items-center justify-center min-h-screen">
    <div class="w-full max-w-2xl bg-gray-800 p-8 rounded-2xl shadow-lg">
        <h2 class="text-2xl font-bold text-white text-center mb-6">Create Product</h2>

        <form action="/products/create" method="POST" class="space-y-5" enctype="multipart/form-data">
            <!-- Image URL -->
            <div>
                <label for="image" class="block text-sm font-medium text-gray-300">Image URL</label>
                <input type="file" id="image" name="image" placeholder="Enter image URL" required
                    class="mt-1 w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Product Name -->
            <div>
                <label for="name" class="block text-sm font-medium text-gray-300">Product Name</label>
                <input type="text" id="name" name="name" placeholder="Enter product name" required
                    class="mt-1 w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Price -->
            <div>
                <label for="price" class="block text-sm font-medium text-gray-300">Price</label>
                <input type="number" id="price" name="price" placeholder="Enter product price" required min="0"
                    class="mt-1 w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Discount -->
            <div>
                <label for="discount" class="block text-sm font-medium text-gray-300">Discount (%)</label>
                <input type="number" id="discount" name="discount" placeholder="Enter discount (default 0)" min="0"
                    value="0"
                    class="mt-1 w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Background Color -->
            <div>
                <label for="bgColor" class="block text-sm font-medium text-gray-300">Background Color</label>
                <input type="text" id="bgColor" name="bgColor" placeholder="e.g. #ffffff or blue-500"
                    class="mt-1 w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Panel Color -->
            <div>
                <label for="panelColor" class="block text-sm font-medium text-gray-300">Panel Color</label>
                <input type="text" id="panelColor" name="panelColor" placeholder="e.g. #f5f5f5"
                    class="mt-1 w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Text Color -->
            <div>
                <label for="textColor" class="block text-sm font-medium text-gray-300">Text Color</label>
                <input type="text" id="textColor" name="textColor" placeholder="e.g. #000000"
                    class="mt-1 w-full px-3 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>

            <!-- Submit -->
            <button type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                Create Product
            </button>
        </form>
    </div>
</body>

</html>